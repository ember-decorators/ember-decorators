{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "noEmitOnError": false,
    "noEmit": true,
    "sourceMap": true,
    "baseUrl": ".",
    "module": "es6",
    "paths": {
      "dummy/tests/*": [
        "tests/*"
      ],
      "dummy/*": [
        "tests/dummy/app/*"
      ],
      "@ember-decorators/utils": [
        "addon"
      ],
      "@ember-decorators/utils/*": [
        "addon/*"
      ],
      "*": [
        "types/*"
      ]
    }
  },
  "include": [
    "addon",
    "tests"
  ]
}
